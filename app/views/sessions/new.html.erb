<h1>Log in</h1>

<table>
  <%= form_tag login_path do %>
    <tr>
      <td>Email:</td>
      <td><%= text_field_tag :email %> </td>
    </tr>
    <tr>
      <td>Password: </td>
      <td><%= password_field_tag :password %> <td>
    </tr>
    <tr>
      <td>
        <%= submit_tag "Submit" %>
      </td>
    </tr>
  <% end %>
</table>
