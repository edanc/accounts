<h1>Log in</h1>
<%= form_tag login_path do %>
  <table>
    <tr>
      <td>Email:</td>
      <td><%= text_field_tag :email %> </td>
    </tr>
    <tr>
      <td>Password: </td>
      <td><%= password_field_tag :password %> <td>
    </tr>
    <tr>
      <td>
        <%= submit_tag "Submit" %>
      </td>
    </tr>
  </table>
<% end %>
